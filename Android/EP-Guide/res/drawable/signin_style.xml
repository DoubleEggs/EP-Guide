<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="#CDC8B1" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="300dip" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
        </shape></item>

</selector>